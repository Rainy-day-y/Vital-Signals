{
	"schemaVersion": 1,
	"id": "vital-signals",
	"version": "${version}",
	"name": "Vital Signals",
	"description": "A Minecraft mod that provides detailed, mod-friendly information about player status and events.",
	"authors": [
		"@Rainy-day-y"
	],
	"contact": {
		"homepage": "https://github.com/Rainy-day-y/Vital-Signal",
		"sources": "https://github.com/Rainy-day-y/Vital-Signal"
	},
	"license": "MIT",
	"icon": "assets/vital-signals/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			{
				"value": "cn.sweetberry.mcmod.vitalsignals.VitalSignals",
				"adapter": "kotlin"
			}
		],
		"client": [
			{
				"value": "cn.sweetberry.mcmod.vitalsignals.VitalSignalsClient",
				"adapter": "kotlin"
			}
		]
	},
	"mixins": [
		"vital-signals.mixins.json",
		{
			"config": "vital-signals.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.18.4",
		"minecraft": "~1.21.11",
		"java": ">=21",
		"fabric-api": "*",
		"fabric-language-kotlin": "*"
	}
}